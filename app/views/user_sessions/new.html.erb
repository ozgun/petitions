<%= page_title t('auth.login') %>

<% form_for @user_session, :url => user_session_path do |f| %>
  <%#= f.error_messages %>
  <%= f.label :email, t('email') %><br />
  <%= f.text_field :email %><br />
  <br />
  <%= f.label :password, t('auth.password') %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.check_box :remember_me %><%= f.label :remember_me, t('auth.remember_me') %><br />
  <br />
  <%= f.submit t('auth.login') %>
<% end %>

<br />

<div id="reset_password_container">
  <%= link_to t('auth.forgot_password'), forgot_my_password_path %>
</div>
