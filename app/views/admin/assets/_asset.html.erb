<tr id="asset_<%= asset.id%>" class="<%= cycle_row %>">
  <td>
    <%= link_to  remove_question_mark(asset.metadata.url), asset.metadata.url, :target => "_blank" %>
  </td>
  <td>
    <%= asset.description %>
  </td>
  <td>
    <%= asset.tag || "" %>
  </td>
  <td>
    <%= file_type_desc(asset.metadata_content_type) %>
    <% if  asset.image? %>
      <div id="asset_preview_<%= asset.id %>" style="display: none">
        <%= image_tag "#{asset.metadata.url}" %>
      </div>
      <%= link_to_function image_tag('picture.png', :alt => t('preview'), :title => t('preview')), "$('#asset_preview_#{asset.id}').dialog({width: 600, modal: true});" %>
    <% end %>
  </td>
  <td>
    <%= number_to_human_size(asset.metadata_file_size) %>
  </td>
  <td>
    <%= asset.created_at %>
  </td>
  <td class="action_links">
    <%= actions_with_icons(asset, {:delete => true, :delete_ajax => true}, "admin") %>
  </td>
</tr>
